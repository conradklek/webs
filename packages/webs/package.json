{
  "name": "@conradklek/webs",
  "version": "0.1.11",
  "description": "A JavaScript framework.",
  "bin": {
    "webs": "bin/cli.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "*.js",
    ".prettierrc.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": "./*.js"
  },
  "scripts": {
    "build:js": "bun build ./src/index.js --outfile=./dist/index.js --format=cjs --minify --sourcemap=inline && bun build ./src/index.js --outfile=./dist/index.mjs --format=esm --minify --sourcemap=inline",
    "build:types": "tsc",
    "build": "rm -rf dist && bun run build:js && bun run build:types",
    "format": "prettier --write .",
    "analyze": "rm -rf dist && bun build ./src/index.js --outdir=./dist --format=esm --naming='index.mjs' --minify --sourcemap=external && npx source-map-explorer dist/index.mjs"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.0.15"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "prettier": "^3.3.2",
    "source-map-explorer": "^2.5.3",
    "typescript": "^5.4.5"
  }
}
