{
  "name": "@conradklek/webs",
  "version": "0.1.5",
  "description": "A JavaScript framework.",
  "bin": {
    "webs": "bin/cli.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "*.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": "./*.js"
  },
  "scripts": {
    "build:js": "bun build ./src/index.js --outfile=./dist/index.js --format=cjs && bun build ./src/index.js --outfile=./dist/index.mjs --format=esm",
    "build:types": "tsc",
    "build": "rm -rf dist && bun run build:js && bun run build:types",
    "test" : "bun test --reporter=junit --reporter-outfile=./test-results.xml"
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.0.15"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.4.5"
  }
}

