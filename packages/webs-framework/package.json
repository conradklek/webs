{
  "name": "@conradklek/webs",
  "author": "Conrad Klek",
  "version": "0.1.26",
  "description": "A JavaScript Framework",
  "bin": {
    "webs": "bin/cli.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "src",
    "*.js",
    ".prettierrc.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./*": "./src/*.js"
  },
  "scripts": {
    "dev": "NODE_ENV=development bun run ./bin/cli.js",
    "start": "NODE_ENV=production bun run ./bin/cli.js",
    "build:js": "bun build ./src/client.js ./src/server.js ./scripts/build.js ./src/config.js ./src/document.js ./src/handlers.js --outdir=./dist --format=esm --target=bun --minify --sourcemap=inline",
    "build:types": "tsc",
    "build": "rm -rf dist && bun run build:js && bun run build:types",
    "format": "prettier --write ."
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.0.15"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  }
}
