{
  "name": "@conradklek/webs",
  "author": "Conrad Klek",
  "version": "0.1.29",
  "description": "A JavaScript Framework",
  "bin": {
    "webs": "bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "client",
    "server",
    "lib",
    "index.js"
  ],
  "exports": {
    ".": "./index.js",
    "./client": "./client/index.js",
    "./server": "./server/request-handler.js",
    "./compiler": "./lib/compiler.js"
  },
  "scripts": {
    "dev": "NODE_ENV=development bun run ./bin/cli.js",
    "start": "NODE_ENV=production bun run ./bin/cli.js",
    "build": "echo 'Build process is now handled by the CLI and does not need a separate script.'",
    "format": "prettier --write ."
  },
  "dependencies": {
    "bun-plugin-tailwind": "^0.0.15"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.4.5"
  }
}
