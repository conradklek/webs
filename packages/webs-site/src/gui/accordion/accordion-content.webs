<script>
  import { inject } from '@conradklek/webs';

  export default {
    name: 'AccordionContent',
    setup() {
      const accordion = inject('accordion');
      const value = inject('itemValue');
      return { accordion, value };
    },
  };
</script>

<template>
  <div w-if="accordion && accordion.is_open(value)" class="contents">
    <div class="pb-3 pt-1">
      <slot></slot>
    </div>
  </div>
</template>
