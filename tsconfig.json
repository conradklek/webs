{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@conradklek/webs": ["."]
    },
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["bun"]
  },
  "include": [
    "lib",
    "src",
    "cli/cli.js",
    "cli/plugin.js",
    "cli/bundler.js",
    "cli/profiler.js",
    "cli/shell.js"
  ],
  "exclude": ["**/*.test.ts", "**/*.test.js"]
}
